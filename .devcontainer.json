{
    "image": "docker.io/library/avr-ubuntu:0.0.5",
    "remoteUser": "dev",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },

    "customizations": {
        "vscode": {
          "extensions": [
            "eamodio.gitlens",
            "llvm-vs-code-extensions.vscode-clangd",
            "zchrissirhcz.cmake-highlight"
        ]
        }
    },
    "mounts": [
        {
            "source": "${localWorkspaceFolder}",
            "target": "/workspace",
            "type": "bind"
        }
    ]
}
