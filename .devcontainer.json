{
    "image": "docker.io/library/avr-ubuntu:0.1.1",
    "remoteUser": "dev",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "runArgs": [ "--device=/dev/bus/usb/" ],
    "remoteEnv": {
    "CXX" : "avr-g++"
    },

    "customizations": {
        "vscode": {
          "extensions": [
            "eamodio.gitlens",
            "llvm-vs-code-extensions.vscode-clangd",
            "zchrissirhcz.cmake-highlight"
        ]
        }
    },
    "mounts": [
        {
            "source": "${localWorkspaceFolder}",
            "target": "/workspace",
            "type": "bind"
        },
        {
            "source" : "/dev/bus/usb",
            "target" : "/dev/bus/usb",
            "type" : "bind"
        }
    ]
}
